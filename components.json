{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "default",
  "rsc": false,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "src/styles/index.css",
    "baseColor": "mint",
    "cssVariables": true,
    "prefix": ""
  },
  "aliases": {
    "components": "@/components",
    "atoms": "@/components/atoms",
    "molecules": "@/components/molecules",
    "organisms": "@/components/organisms",
    "utils": "@/lib/utils",
    "ui": "@/components/ui",
    "i18n": "@/i18n",
    "hooks": "@/hooks",
    "layouts": "@/layouts",
    "animations": "@/utils/animations"
  },
  "animations": {
    "enabled": true,
    "system": {
      "path": "@/utils/animations",
      "prefix": "",
      "reducedMotion": true
    }
  },
  "rules": {
    "components": {
      "maxLines": 68,
      "requireReadme": true,
      "enforceAtomicDesign": true,
      "requireTests": true,
      "testCoverage": {
        "atoms": 90,
        "molecules": 85,
        "organisms": 80
      }
    },
    "i18n": {
      "enforceAtomicTranslations": true,
      "requiredLanguages": ["en", "sv", "da", "nl"],
      "domainBasedFiles": true,
      "maxKeysPerFile": 20,
      "requireTypes": true
    },
    "folder": {
      "noNestedComponents": true,
      "enforceKebabCase": true,
      "requireIndex": true,
      "atomicStructure": {
        "atoms": "src/components/atoms",
        "molecules": "src/components/molecules",
        "organisms": "src/components/organisms"
      }
    },
    "documentation": {
      "requireJSDoc": true,
      "requireComponentProps": true,
      "requireAccessibility": true,
      "requireUsageExample": true
    },
    "accessibility": {
      "enforceAria": true,
      "requireKeyboardNav": true,
      "enforceContrast": true
    },
    "styling": {
      "enforceTokens": true,
      "noInlineStyles": true,
      "requireDarkMode": true,
      "enforceColorRatio": {
        "primary": 40,
        "secondary": 30,
        "tertiary": 20,
        "accent": 10
      }
    },
    "performance": {
      "maxBundleSize": "100kb",
      "enforceCodeSplitting": true,
      "requireLazyLoading": true
    }
  },
  "themes": {
    "light": {
      "background": "220 20% 98%",
      "foreground": "222 47% 11%",
      "primary": "217 91% 60%",
      "secondary": "220 14% 96%",
      "muted": "220 14% 96%",
      "muted-foreground": "220 8% 46%",
      "accent": "35 92% 51%",
      "accent-foreground": "210 40% 98%",
      "destructive": "0 84% 60%",
      "destructive-foreground": "210 40% 98%",
      "border": "220 13% 91%",
      "input": "220 13% 91%",
      "ring": "var(--primary)"
    },
    "dark": {
      "background": "222 47% 11%",
      "foreground": "210 40% 98%",
      "primary": "217 91% 60%",
      "secondary": "223 47% 7%",
      "muted": "223 47% 7%",
      "muted-foreground": "215 20% 65%",
      "accent": "35 92% 51%",
      "accent-foreground": "210 40% 98%",
      "destructive": "0 84% 60%",
      "destructive-foreground": "210 40% 98%",
      "border": "217 19% 27%",
      "input": "217 19% 27%",
      "ring": "var(--primary)"
    }
  }
}
